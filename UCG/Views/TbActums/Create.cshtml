@using UCG.Models.ViewModels;
@using static UCG.Models.TbActum;
@model ActaViewModel;


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TbActum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAsociacion" class="control-label"></label>
                <select asp-for="IdAsociacion" class="form-select" asp-items="ViewBag.IdAsociacion" id="IdAsociacion">
                    <option disabled="" selected="">Seleccione una asociacion</option>
                </select>
                <span asp-validation-for="IdAsociacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAsociado" class="control-label"></label>
                <select asp-for="IdAsociado" class ="form-select" id="IdAsociado">
                    <option disabled="" selected="" >Seleccione un asociado</option>
                </select>
                <span asp-validation-for="IdAsociado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaSesion" class="control-label"></label>
                <input asp-for="FechaSesion" class="form-control" />
                <span asp-validation-for="FechaSesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroActa" class="control-label"></label>
                <input asp-for="NumeroActa" class="form-control" />
                <span asp-validation-for="NumeroActa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoDeActa>()">
                    <option disabled="" selected="">Seleccione un Estado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoTotalAcordado" class="control-label"></label>
                <input asp-for="MontoTotalAcordado" class="form-control" />
                <span asp-validation-for="MontoTotalAcordado" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detailModal">
                    Agregar Asistencias
                </button>
            </div>

            <h4>Asistencias</h4>
            <table class="table table-bordered" id="detailsTable">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Asociado</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

            <input type="hidden" name="ActaAsistenciaJason" id="ActaAsistenciaJason" />

            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModalLabel">Agregar Detalle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <label class="form-label">Asociado</label>
                <select id="modalIdAsociado" class="form-select">
                    <option value="0" disabled selected>Seleccione un asociado</option>
                </select>
              
            </div>
            <div class="modal-footer">
                <button type="button" id="addDetailBtn" class="btn btn-success">Agregar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <!-- jQuery primero -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- DataTables CSS -->
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

        <!-- DataTables JS -->
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

        <script>
            const rutasMovimiento = {
                obtenerAsociados: '@Url.Action("ObtenerAsociadosPorAsociacion", "TbActums")',              
            };
        </script>

        <!-- Tu script separado -->
        <script src="~/js/ActaScripts/ActaCreate.js"></script>
     }
}

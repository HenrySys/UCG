@model UCG.Models.TbDetalleMovimiento

@{
    ViewData["Title"] = "Crear Detalle de Movimiento";
}

<h1 class="text-center mb-4">Crear Detalle de Movimiento</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Información del Detalle
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <dl class="row">
                        <dt class="col-sm-4 mb-3">
                            <label asp-for="IdMovimiento" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <select asp-for="IdMovimiento" class="form-select" asp-items="ViewBag.IdMovimiento"></select>
                            <span asp-validation-for="IdMovimiento" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <label asp-for="IdAcuerdo" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <select asp-for="IdAcuerdo" class="form-select" asp-items="ViewBag.IdAcuerdo"></select>
                            <span asp-validation-for="IdAcuerdo" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <label asp-for="Decripcion" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="Decripcion" class="form-control" />
                            <span asp-validation-for="Decripcion" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <label asp-for="Subtotal" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="Subtotal" class="form-control" />
                            <span asp-validation-for="Subtotal" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <label asp-for="IdInformeEconomico" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="IdInformeEconomico" class="form-control" />
                            <span asp-validation-for="IdInformeEconomico" class="text-danger"></span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <input type="submit" value="Guardar Detalle" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

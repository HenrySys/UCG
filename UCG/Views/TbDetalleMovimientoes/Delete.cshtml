@model UCG.Models.TbDetalleMovimiento

@{
    ViewData["Title"] = "Eliminar Detalle de Movimiento";
}

<h1 class="text-center mb-4">Eliminar Detalle de Movimiento</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este detalle de movimiento?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Decripcion</dd>

                    <dt class="col-sm-4 mb-3">Subtotal</dt>
                    <dd class="col-sm-8 mb-3">@Model.Subtotal</dd>

                    <dt class="col-sm-4 mb-3">Informe Económico</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdInformeEconomico</dd>

                    <dt class="col-sm-4 mb-3">Acuerdo</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAcuerdoNavigation?.NumeroAcuerdo</dd>

                    <dt class="col-sm-4 mb-3">Movimiento</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdMovimientoNavigation?.IdMovimiento</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdDetalleMovimiento" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

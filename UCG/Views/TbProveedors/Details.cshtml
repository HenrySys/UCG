@model UCG.Models.TbProveedor

@{
    ViewData["Title"] = "Detalle de Proveedor";
}

<h1 class="text-center mb-4">Detalle de Proveedor</h1>
<hr />
<div class="row g-4 justify-content-center">
    <!-- Card izquierda: Información del Proveedor -->
    <div class="col-lg-6">
        <div class="card shadow h-100">
            <div class="card-header">
                Información del Proveedor
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Tipo de Proveedor</dt>
                    <dd class="col-sm-8 mb-3">@Model.TipoProveedor</dd>

                    <dt class="col-sm-4 mb-3">Nombre de la Empresa</dt>
                    <dd class="col-sm-8 mb-3">@Model.NombreEmpresa</dd>

                    <dt class="col-sm-4 mb-3">Cédula Jurídica</dt>
                    <dd class="col-sm-8 mb-3">@Model.CedulaJuridica</dd>

                    <dt class="col-sm-4 mb-3">Nombre del Contacto</dt>
                    <dd class="col-sm-8 mb-3">@Model.NombreContacto</dd>

                    <dt class="col-sm-4 mb-3">Cédula del Contacto</dt>
                    <dd class="col-sm-8 mb-3">@Model.CedulaContacto</dd>

                    <dt class="col-sm-4 mb-3">Dirección</dt>
                    <dd class="col-sm-8 mb-3">@Model.Direccion</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Correo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Fax</dt>
                    <dd class="col-sm-8 mb-3">@Model.Fax</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociacions" asp-action="Details" asp-route-id="@Model.IdAsociacionNavigation.IdAsociacion">
                            @Model.IdAsociacionNavigation.Nombre
                        </a>
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdProveedor" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>

    <!-- card derecha: facturas relacionadas -->
    <div class="col-lg-4">
        <div class="card shadow h-100">
            <div class="card-header bg-secondary-emphasis d-flex justify-content-between align-items-center">
                <span>Facturas Relacionadas</span>
                <!-- <button id="btnAgregarFacturas" class="btn btn-primary btn-sm" data-id="@Model.IdProveedor">
                    Agregar Factura
                </button> -->
            </div>
            <div class="card-body">
                <table id="tablaFacturas" class="table table-striped table-hover display">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Monto</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var factura in Model.TbFacturas)
                        {
                            <tr data-id="@factura.IdFactura">
                                <td>@factura.FechaEmision.ToString("dd/MM/yyyy")</td>
                                <td>@factura.MontoTotal.ToString("C")</td>
                                <td>@factura.Descripcion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<!-- DataTables CSS con Bootstrap -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

@section Scripts {
    @{
        <!-- Tu script separado -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- DataTables JS -->
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/js/ProveedorScripts/ProveedorDetail.js"></script>
    }
}



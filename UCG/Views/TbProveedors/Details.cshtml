@model UCG.Models.TbProveedor

@{
    ViewData["Title"] = "Detalle de Proveedor";
}

<h1 class="text-center mb-4">Detalle de Proveedor</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                Información del Proveedor
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Tipo de Proveedor</dt>
                    <dd class="col-sm-8 mb-3">@Model.TipoProveedor</dd>

                    <dt class="col-sm-4 mb-3">Nombre de la Empresa</dt>
                    <dd class="col-sm-8 mb-3">@Model.NombreEmpresa</dd>

                    <dt class="col-sm-4 mb-3">Cédula Jurídica</dt>
                    <dd class="col-sm-8 mb-3">@Model.CedulaJuridica</dd>

                    <dt class="col-sm-4 mb-3">Nombre del Contacto</dt>
                    <dd class="col-sm-8 mb-3">@Model.NombreContacto</dd>

                    <dt class="col-sm-4 mb-3">Cédula del Contacto</dt>
                    <dd class="col-sm-8 mb-3">@Model.CedulaContacto</dd>

                    <dt class="col-sm-4 mb-3">Dirección</dt>
                    <dd class="col-sm-8 mb-3">@Model.Direccion</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Correo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Fax</dt>
                    <dd class="col-sm-8 mb-3">@Model.Fax</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociacions" asp-action="Details" asp-route-id="@Model.IdAsociacionNavigation.IdAsociacion">
                            @Model.IdAsociacionNavigation.Nombre
                        </a>
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdProveedor" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

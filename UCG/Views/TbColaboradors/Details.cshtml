@model UCG.Models.TbColaborador

@{
    ViewData["Title"] = "Detalle del Colaborador";
}

<h1 class="text-center mb-4">Detalle del Colaborador</h1>
<hr />
<div class="row g-4 justify-content-center">

    <!-- card izquierda: información del colaborador -->
    <div class="col-lg-6">
        <div class="card shadow h-100">
            <div class="card-header">
                Información del Colaborador
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociacions" asp-action="Details" asp-route-id="@Model.IdAsociacion">
                            @Model.IdAsociacionNavigation!.Nombre
                        </a>
                    </dd>

                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Cédula</dt>
                    <dd class="col-sm-8 mb-3">@Model.Cedula</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Correo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Observaciones</dt>
                    <dd class="col-sm-8 mb-3">@Model.Observaciones</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.IdColaborador" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>

    <!-- card derecha: historial de facturas -->
    <div class="col-lg-4">
        <div class="card shadow h-100">
            <div class="card-header bg-secondary-emphasis d-flex justify-content-between align-items-center">
                <span>Facturas Relacionadas</span>
                <!-- <button id="btnAgregarFacturas" class="btn btn-primary btn-sm" data-id="@Model.IdColaborador">
                    Agregar Factura
                </button> -->
            </div>
            <div class="card-body">
                <table id="tablaFacturas" class="table table-striped table-hover display">
                    <thead>
                        <tr>
                            <th>Fecha Emitida</th>
                            <th>Monto Total</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var factura in Model.TbFacturas)
                        {
                            <tr data-id="@factura.IdFactura">
                                <td>@factura.FechaEmision.ToString("dd/MM/yyyy")</td>
                                <td>@factura.MontoTotal.ToString("C")</td>
                                <td>@factura.Descripcion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- DataTables CSS con Bootstrap -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

@section Scripts {
    @{
        <!-- Tu script separado -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- DataTables JS -->
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/js/ColaboradorScripts/ColaboradorDetail.js"></script>
    }
}


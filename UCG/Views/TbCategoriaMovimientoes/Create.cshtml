@model UCG.Models.TbCategoriaMovimiento

@{
    ViewData["Title"] = "Crear Categoría de Movimiento";
}

<h1 class="text-center mb-4">Crear Categoría de Movimiento</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Información de Categoría
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <dl class="row">
                        <dt class="col-sm-4 mb-3">
                            <label asp-for="IdAsociado" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <select asp-for="IdAsociado" class="form-select" asp-items="ViewBag.IdAsociado"></select>
                            <span asp-validation-for="IdAsociado" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <label asp-for="NombreCategoria" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="NombreCategoria" class="form-control" />
                            <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            <label asp-for="DescripcionCategoria" class="form-label"></label>
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="DescripcionCategoria" class="form-control" />
                            <span asp-validation-for="DescripcionCategoria" class="text-danger"></span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <input type="submit" value="Guardar Categoría" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

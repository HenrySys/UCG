@model UCG.Models.TbFondosRecaudadosActividad

@{
    ViewData["Title"] = "Detalle del Fondo Recaudado";
}

<h1 class="text-center mb-4">Detalle del Fondo Recaudado</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Información del Fondo
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Detalle</dt>
                    <dd class="col-sm-8 mb-3">@Model.Detalle</dd>

                    <dt class="col-sm-4 mb-3">Monto</dt>
                    <dd class="col-sm-8 mb-3">₡@Model.Monto?.ToString("N2")</dd>

                    <dt class="col-sm-4 mb-3">Fecha de Registro</dt>
                    <dd class="col-sm-8 mb-3">@Model.FechaRegistro?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Actividad</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdActividadNavigation?.Nombre (@Model.IdActividad)</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.IdFondosRecaudadosActividad" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>

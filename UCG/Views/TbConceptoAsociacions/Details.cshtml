@model UCG.Models.TbConceptoAsociacion

@{
    ViewData["Title"] = "Detalle de Concepto de Asociación";
}

<h1 class="text-center mb-4">Detalle de Concepto de Asociación</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                Información del Concepto Asociado
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociacions" asp-action="Details" asp-route-id="@Model.IdAsociacionNavigation.IdAsociacion">
                            @Model.IdAsociacionNavigation.Nombre
                        </a>
                    </dd>

                    <dt class="col-sm-4 mb-3">Concepto</dt>
                    <dd class="col-sm-8 mb-3">
                        @Model.IdConceptoNavigation.Concepto
                    </dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.DescripcionPersonalizada))
                        {
                            @Model.DescripcionPersonalizada
                        }
                        else
                        {
                            <span class="text-muted">No se registró ninguna descripción.</span>
                        }
                    </dd>
                    
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdConceptoAsociacion" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

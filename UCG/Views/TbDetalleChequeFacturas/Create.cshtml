@model UCG.Models.TbDetalleChequeFactura

@{
    ViewData["Title"] = "Agregar Detalle de Cheque y Factura";
}

<h1 class="text-center mb-4">Agregar Detalle de Egreso</h1>
<hr />
<div id="tempDataSwal"
     data-success="@TempData["SuccessMessage"]"
     data-error="@TempData["ErrorMessage"]"
     data-movimiento="@ViewData["IdMovimientoEgreso"]">
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Detalles del Egreso
            </div>
            <div class="card-body">
                <form asp-action="Create" data-mode="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Movimiento Egreso -->
                    <div class="mb-3">
                        <label asp-for="IdMovimientoEgreso" class="form-label"></label>
                        <select asp-for="IdMovimientoEgreso" class="form-select" asp-items="ViewBag.IdMovimientoEgreso">
                            <option disabled selected>Seleccione un movimiento</option>
                        </select>
                        <span asp-validation-for="IdMovimientoEgreso" class="text-danger"></span>
                    </div>

                    <!-- Acuerdo -->
                    <div class="mb-3">
                        <label asp-for="IdAcuerdo" class="form-label"></label>
                        <select asp-for="IdAcuerdo" class="form-select" asp-items="ViewBag.IdAcuerdo">
                            <option disabled selected>Seleccione un acuerdo</option>
                        </select>
                        <span asp-validation-for="IdAcuerdo" class="text-danger"></span>
                    </div>

                    <!-- Cheque -->
                    <div class="mb-3">
                        <label asp-for="IdCheque" class="form-label"></label>
                        <select asp-for="IdCheque" class="form-select" asp-items="ViewBag.IdCheque">
                            <option disabled selected>Seleccione un cheque</option>
                        </select>
                        <span asp-validation-for="IdCheque" class="text-danger"></span>
                    </div>

                    <!-- Factura -->
                    <div class="mb-3">
                        <label asp-for="IdFactura" class="form-label"></label>
                        <select asp-for="IdFactura" class="form-select" asp-items="ViewBag.IdFactura">
                            <option disabled selected>Seleccione una factura</option>
                        </select>
                        <span asp-validation-for="IdFactura" class="text-danger"></span>
                    </div>

                    <!-- Monto -->
                    <div class="mb-3">
                        <label asp-for="Monto" class="form-label"></label>
                        <input asp-for="Monto" class="form-control" type="number" min="0" step="0.01" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                    <!-- Observación -->
                    <div class="mb-3">
                        <label asp-for="Observacion" class="form-label"></label>
                        <input asp-for="Observacion" class="form-control" />
                        <span asp-validation-for="Observacion" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/DetalleChequeFacturaScripts/Create.js"></script>
}

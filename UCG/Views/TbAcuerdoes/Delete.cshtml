@model UCG.Models.TbAcuerdo

@{
    ViewData["Title"] = "Eliminar Acuerdo";
}

<h1 class="text-center mb-4">Eliminar Acuerdo</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este acuerdo?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Número de Acuerdo</dt>
                    <dd class="col-sm-8 mb-3">@Model.NumeroAcuerdo</dd>

                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Descripcion</dd>

                    <dt class="col-sm-4 mb-3">Monto del Acuerdo</dt>
                    <dd class="col-sm-8 mb-3">@Model.MontoAcuerdo</dd>

                    <dt class="col-sm-4 mb-3">Acta Asociada</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdActaNavigation?.NumeroActa</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdAcuerdo" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

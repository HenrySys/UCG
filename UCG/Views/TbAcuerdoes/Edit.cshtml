@model UCG.Models.TbAcuerdo

@{
    ViewData["Title"] = "Editar Acuerdo";
}

<h1 class="text-center mb-4">Editar Acuerdo</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Formulario de Edición
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="IdAcuerdo" />

                    <div class="mb-3">
                        <label asp-for="IdActa" class="form-label"></label>
                        <select asp-for="IdActa" class="form-select" asp-items="ViewBag.IdActa"></select>
                        <span asp-validation-for="IdActa" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NumeroAcuerdo" class="form-label"></label>
                        <input asp-for="NumeroAcuerdo" class="form-control" />
                        <span asp-validation-for="NumeroAcuerdo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MontoAcuerdo" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">₡</span>
                            <input asp-for="MontoAcuerdo" class="form-control" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="MontoAcuerdo" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-warning">Editar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

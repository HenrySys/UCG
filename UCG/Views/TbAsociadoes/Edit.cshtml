@model UCG.Models.TbAsociado

@{
    ViewData["Title"] = "Editar Asociado";
}

<h1 class="text-center mb-4">Editar Asociado</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="asociadoTabs" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" id="asociacion-tab" data-bs-toggle="tab" data-bs-target="#asociacion" type="button" role="tab">Asociación</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="datos-tab" data-bs-toggle="tab" data-bs-target="#datos" type="button" role="tab">Datos Personales</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="contacto-tab" data-bs-toggle="tab" data-bs-target="#contacto" type="button" role="tab">Contacto</button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="IdAsociado" />

                    <div class="tab-content" id="asociadoTabsContent">
                        <!-- TAB: Asociación -->
                        <div class="tab-pane fade show active" id="asociacion" role="tabpanel">
                            <div class="mb-3">
                                <label asp-for="IdAsociacion" class="form-label"></label>
                                <select asp-for="IdAsociacion" class="form-select" asp-items="ViewBag.IdAsociacion"></select>
                                <span asp-validation-for="IdAsociacion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="IdUsuario" class="form-label"></label>
                                <select asp-for="IdUsuario" class="form-select" asp-items="ViewBag.IdUsuario"></select>
                                <span asp-validation-for="IdUsuario" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- TAB: Datos personales -->
                        <div class="tab-pane fade" id="datos" role="tabpanel">
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Apellido1" class="form-label"></label>
                                <input asp-for="Apellido1" class="form-control" />
                                <span asp-validation-for="Apellido1" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Apellido2" class="form-label"></label>
                                <input asp-for="Apellido2" class="form-control" />
                                <span asp-validation-for="Apellido2" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Cedula" class="form-label"></label>
                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Nacionalidad" class="form-label"></label>
                                <input asp-for="Nacionalidad" class="form-control" />
                                <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FechaNacimiento" class="form-label"></label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Sexo" class="form-label"></label>
                                <input asp-for="Sexo" class="form-control" />
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EstadoCivil" class="form-label"></label>
                                <input asp-for="EstadoCivil" class="form-control" />
                                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- TAB: Contacto -->
                        <div class="tab-pane fade" id="contacto" role="tabpanel">
                            <div class="mb-3">
                                <label asp-for="Telefono" class="form-label"></label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label"></label>
                                <input asp-for="Correo" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Direccion" class="form-label"></label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Estado" class="form-label"></label>
                                <input asp-for="Estado" class="form-control" />
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-warning">Editar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

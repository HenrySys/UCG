@model UCG.Models.TbAsociado

@{
    ViewData["Title"] = "Detalle de Asociado";
}

<h1 class="text-center mb-4">Detalle de Asociado</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                Información del Asociado
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Nacionalidad</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nacionalidad</dd>

                    <dt class="col-sm-4 mb-3">Cédula</dt>
                    <dd class="col-sm-8 mb-3">@Model.Cedula</dd>

                    <dt class="col-sm-4 mb-3">Primer Apellido</dt>
                    <dd class="col-sm-8 mb-3">@Model.Apellido1</dd>

                    <dt class="col-sm-4 mb-3">Segundo Apellido</dt>
                    <dd class="col-sm-8 mb-3">@Model.Apellido2</dd>

                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Fecha de Nacimiento</dt>
                    <dd class="col-sm-8 mb-3">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Sexo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Sexo</dd>

                    <dt class="col-sm-4 mb-3">Estado Civil</dt>
                    <dd class="col-sm-8 mb-3">@Model.EstadoCivil</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Correo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Dirección</dt>
                    <dd class="col-sm-8 mb-3">@Model.Direccion</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociacions"
                           asp-action="Details"
                           asp-route-id="@Model.IdAsociacionNavigation.IdAsociacion">
                            @Model.IdAsociacionNavigation.Nombre
                        </a>
                    </dd>

                    <dt class="col-sm-4 mb-3">Usuario</dt>
                    <dd class="col-sm-8 mb-3">
                        @(Model.IdUsuarioNavigation != null ? Model.IdUsuarioNavigation.IdUsuario.ToString() : "No tiene usuario asignado")
                    </dd>
                </dl>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdAsociado" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

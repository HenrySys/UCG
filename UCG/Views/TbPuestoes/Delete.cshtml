@model UCG.Models.TbPuesto

@{
    ViewData["Title"] = "Eliminar Puesto";
}

<h1 class="text-center mb-4">Eliminar Puesto</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este puesto?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Decripcion</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdPuesto" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-danger" id="btnConfirmDelete">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>

                @section Scripts {
                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    <script src="~/js/PuestoScripts/PuestoDelete.js"></script>
                }
            </div>
        </div>
    </div>
</div>

@model UCG.Models.TbCliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="text-center mb-4">Eliminar Cliente</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este cliente?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Primer Apellido</dt>
                    <dd class="col-sm-8 mb-3">@Model.Apellido1</dd>

                    <dt class="col-sm-4 mb-3">Segundo Apellido</dt>
                    <dd class="col-sm-8 mb-3">@Model.Apellido2</dd>

                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Cédula</dt>
                    <dd class="col-sm-8 mb-3">@Model.Cedula</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Correo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Dirección</dt>
                    <dd class="col-sm-8 mb-3">@Model.Direccion</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociacionNavigation?.Nombre</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdCliente" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@model UCG.Models.TbCuentum

@{
    ViewData["Title"] = "Eliminar Cuenta";
}

<h1 class="text-center mb-4">Eliminar Cuenta</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar esta cuenta?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Tipo de Cuenta</dt>
                    <dd class="col-sm-8 mb-3">@Model.TipoCuenta</dd>

                    <dt class="col-sm-4 mb-3">Título de la Cuenta</dt>
                    <dd class="col-sm-8 mb-3">@Model.TituloCuenta</dd>

                    <dt class="col-sm-4 mb-3">Número de Cuenta</dt>
                    <dd class="col-sm-8 mb-3">@Model.NumeroCuenta</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociacionNavigation?.Nombre</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdCuenta" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "LogIn";
    Layout = null;
}

@model UCG.Models.ViewModels.LogInVM;

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
      
        body {
            background-color: #f5f5f5;
            font-family: 'Inter', sans-serif;

        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
            padding-top: 2rem;
        }

        .card-header {
            background-color: #f8f9fa;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-control,
        .login-btn {
            border-radius: 10px;
            font-size: 1rem;
            height: 45px; 
        }

            .form-control:focus {
                outline: none;
                box-shadow: none;
                border-color: #ff7f50;
            }

        .login-btn {
            background-color: #ff7f50;
            border: none;
            color: white;
            font-weight: bold;
            width: 100%;
        }

            .login-btn:hover {
                background-color: #e76f3c;
            }

        .register-link {
            color: #ff7f50;
            text-decoration: none;
            font-weight: bold;
        }

            .register-link:hover {
                color: #e76f3c;
                text-decoration: underline;
            }

       
        .back-button {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #ffffff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, transform 0.3s;
        }

            .back-button svg {
                width: 20px;
                height: 20px;
                fill: #555;
                transition: fill 0.3s;
            }

            .back-button:hover {
                background-color: #e9ecef;
                transform: translateX(-50%) scale(1.1);
            }

                .back-button:hover svg {
                    fill: #333;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="col-md-4">
            <div class="card">

                <!-- Botón de volver -->
                <a asp-controller="Home" asp-action="Index" class="back-button">
                    <svg viewBox="0 0 384 512">
                        <path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"></path>
                    </svg>
                </a>

                <div class="card-header">
                    Iniciar Sesion
                </div>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="LogIn" method="post">
                        <input type="email" class="form-control mb-3" placeholder="Correo electrónico" required asp-for="Correo" />
                        <input type="password" class="form-control mb-3" placeholder="Contraseña" required asp-for="Contraseña" />

                        <div class="d-grid gap-2">
                            <button class="btn login-btn" type="submit">Iniciar Sesion</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <p class="text-center mt-3">No tienes una cuenta? <a asp-controller="Acceso" asp-action="Registrarse" class="register-link">Registrarse Ya!</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

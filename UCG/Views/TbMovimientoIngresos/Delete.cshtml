@model UCG.Models.TbMovimientoIngreso

@{
    ViewData["Title"] = "Eliminar Movimiento Ingreso";
}

<h1 class="text-center mb-4">Eliminar Movimiento de Ingreso</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este movimiento de ingreso?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Fecha de Ingreso</dt>
                    <dd class="col-sm-8 mb-3">@Model.FechaIngreso?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Descripcion</dd>

                    <dt class="col-sm-4 mb-3">Monto Total</dt>
                    <dd class="col-sm-8 mb-3">₡@Model.MontoTotalIngresado?.ToString("N2")</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociacionNavigation?.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Asociado</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociadoNavigation?.Nombre @Model.IdAsociadoNavigation?.Apellido1</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdMovimientoIngreso" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-danger" id="btnConfirmDelete">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/MovimientoIngresosScripts/MovimientoIngresoDelete.js"></script>
    }

@using UCG.Models.ViewModels;
@using static UCG.Models.TbUsuario;
@using static UCG.Models.TbAsociacion;
@model AsociacionViewModel

@{
    ViewData["Title"] = "Crear Asociación";

}

<h1 class="text-center mb-4">Crear Asociación</h1>
<hr />

<div id="tempDataSwal"
     data-success="@TempData["SuccessMessage"]"
     data-error="@TempData["ErrorMessage"]"
</div>

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <!-- Columna 1: Asociación con Tabs -->
        <div class="col-12 col-md-6">
            <div class="accordion" id="accordionAsociacion">
                <!-- Información Legal -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingLegal">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLegal" aria-expanded="true" aria-controls="collapseLegal">
                            Información Legal
                        </button>
                    </h2>
                    <div id="collapseLegal" class="accordion-collapse collapse show" aria-labelledby="headingLegal" data-bs-parent="#accordionAsociacion">
                        <div class="accordion-body">
                            <!-- Contenido Información Legal -->
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CedulaJuridica" class="form-label"></label>
                                <input asp-for="CedulaJuridica" class="form-control" />
                                <span asp-validation-for="CedulaJuridica" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CodigoRegistro" class="form-label"></label>
                                <input asp-for="CodigoRegistro" class="form-control" />
                                <span asp-validation-for="CodigoRegistro" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FechaConstitucionTexto" class="form-label"></label>
                                <input asp-for="FechaConstitucionTexto" class="form-control" type="date" />
                                <span asp-validation-for="FechaConstitucionTexto" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label"></label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoDeAsociacion>()">
                                    <option disabled selected>Seleccione un estado</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contacto -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingContacto">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseContacto" aria-expanded="false" aria-controls="collapseContacto">
                            Contacto
                        </button>
                    </h2>
                    <div id="collapseContacto" class="accordion-collapse collapse" aria-labelledby="headingContacto" data-bs-parent="#accordionAsociacion">
                        <div class="accordion-body">
                            <div class="mb-3">
                                <label asp-for="Telefono" class="form-label"></label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label"></label>
                                <input asp-for="Correo" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Fax" class="form-label"></label>
                                <input asp-for="Fax" class="form-control" />
                                <span asp-validation-for="Fax" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ubicación -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingUbicacion">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUbicacion" aria-expanded="false" aria-controls="collapseUbicacion">
                            Ubicación
                        </button>
                    </h2>
                    <div id="collapseUbicacion" class="accordion-collapse collapse" aria-labelledby="headingUbicacion" data-bs-parent="#accordionAsociacion">
                        <div class="accordion-body">
                            <div class="mb-3">
                                <label asp-for="Provincia" class="form-label"></label>
                                <input asp-for="Provincia" class="form-control" />
                                <span asp-validation-for="Provincia" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Canton" class="form-label"></label>
                                <input asp-for="Canton" class="form-control" />
                                <span asp-validation-for="Canton" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Distrito" class="form-label"></label>
                                <input asp-for="Distrito" class="form-control" />
                                <span asp-validation-for="Distrito" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Pueblo" class="form-label"></label>
                                <input asp-for="Pueblo" class="form-control" />
                                <span asp-validation-for="Pueblo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Direccion" class="form-label"></label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Columna 2: Usuario -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header ">
                    Datos del Usuario
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Usuario.NombreUsuario" class="form-label"></label>
                        <input asp-for="Usuario.NombreUsuario" class="form-control" />
                        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Contraseña" class="form-label"></label>
                        <input asp-for="Usuario.Contraseña" class="form-control" type="password" />
                        <span asp-validation-for="Usuario.Contraseña" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.ConfirmarContraseña" class="form-label"></label>
                        <input asp-for="Usuario.ConfirmarContraseña" class="form-control" type="password" />
                        <span asp-validation-for="Usuario.ConfirmarContraseña" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Correo" class="form-label"></label>
                        <input asp-for="Usuario.Correo" class="form-control" />
                        <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Rol" class="form-label"></label>
                        <select asp-for="Usuario.Rol" class="form-select" asp-items="Html.GetEnumSelectList<RolUsuario>()"></select>
                        <span asp-validation-for="Usuario.Rol" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Estado" class="form-label"></label>
                        <select asp-for="Usuario.Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoUsuario>()"></select>
                        <span asp-validation-for="Usuario.Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="mt-4 text-center">
        <input type="submit" value="Crear" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </div>
</form>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

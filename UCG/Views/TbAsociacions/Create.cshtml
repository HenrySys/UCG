@using UCG.Models.ViewModels;
@using static UCG.Models.TbUsuario;
@using static UCG.Models.TbAsociacion;
@model AsociacionViewModel

@{
    ViewData["Title"] = "Crear Asociación";
}

<h1 class="text-center mb-4">Crear Asociación</h1>
<hr />

<form asp-action="Create">
    <div class="row">
        <!-- Columna 1: Asociación con Tabs -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    Datos de la Asociación
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs" id="asociacionTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="legal-tab" data-bs-toggle="tab" data-bs-target="#legal" type="button" role="tab">Información Legal</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="contacto-tab" data-bs-toggle="tab" data-bs-target="#contacto" type="button" role="tab">Contacto</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="ubicacion-tab" data-bs-toggle="tab" data-bs-target="#ubicacion" type="button" role="tab">Ubicación</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-3" id="asociacionTabsContent">
                        <div class="tab-pane fade show active" id="legal" role="tabpanel">
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CedulaJuridica" class="form-label"></label>
                                <input asp-for="CedulaJuridica" class="form-control" />
                                <span asp-validation-for="CedulaJuridica" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CodigoRegistro" class="form-label"></label>
                                <input asp-for="CodigoRegistro" class="form-control" />
                                <span asp-validation-for="CodigoRegistro" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FechaConstitucion" class="form-label"></label>
                                <input asp-for="FechaConstitucion" class="form-control" type="date" />
                                <span asp-validation-for="FechaConstitucion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label"></label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoDeAsociacion>()">
                                    <option disabled selected>Seleccione un estado</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="contacto" role="tabpanel"> 
                            <div class="mb-3">
                                <label asp-for="Telefono" class="form-label"></label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label"></label>
                                <input asp-for="Correo" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Fax" class="form-label"></label>
                                <input asp-for="Fax" class="form-control" />
                                <span asp-validation-for="Fax" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="ubicacion" role="tabpanel">
                            <div class="mb-3">
                                <label asp-for="Provincia" class="form-label"></label>
                                <input asp-for="Provincia" class="form-control" />
                                <span asp-validation-for="Provincia" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Canton" class="form-label"></label>
                                <input asp-for="Canton" class="form-control" />
                                <span asp-validation-for="Canton" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Distrito" class="form-label"></label>
                                <input asp-for="Distrito" class="form-control" />
                                <span asp-validation-for="Distrito" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Pueblo" class="form-label"></label>
                                <input asp-for="Pueblo" class="form-control" />
                                <span asp-validation-for="Pueblo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Direccion" class="form-label"></label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Columna 2: Usuario -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header ">
                    Datos del Usuario
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Usuario.NombreUsuario" class="form-label"></label>
                        <input asp-for="Usuario.NombreUsuario" class="form-control" />
                        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Contraseña" class="form-label"></label>
                        <input asp-for="Usuario.Contraseña" class="form-control" type="password" />
                        <span asp-validation-for="Usuario.Contraseña" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.ConfirmarContraseña" class="form-label"></label>
                        <input asp-for="Usuario.ConfirmarContraseña" class="form-control" type="password" />
                        <span asp-validation-for="Usuario.ConfirmarContraseña" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Correo" class="form-label"></label>
                        <input asp-for="Usuario.Correo" class="form-control" />
                        <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Rol" class="form-label"></label>
                        <select asp-for="Usuario.Rol" class="form-select" asp-items="Html.GetEnumSelectList<RolUsuario>()"></select>
                        <span asp-validation-for="Usuario.Rol" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario.Estado" class="form-label"></label>
                        <select asp-for="Usuario.Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoUsuario>()"></select>
                        <span asp-validation-for="Usuario.Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="mt-4 text-center">
        <input type="submit" value="Crear" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </div>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Datos de ejemplo: sustituye con JSON de provincias reales si lo deseas
        const data = {
            "San José": ["Central", "Escazú"],
            "Alajuela": ["Central", "San Ramón"]
        };

        const cantonData = {
            "Central": ["Carmen", "Merced"],
            "Escazú": ["San Rafael", "San Antonio"],
            "San Ramón": ["San Juan", "Volio"]
        };

        $(document).ready(function () {
            const provinciaSelect = $('#Provincia');
            const cantonSelect = $('#Canton');
            const distritoSelect = $('#Distrito');

            provinciaSelect.append(`<option disabled selected>Seleccione una provincia</option>`);
            Object.keys(data).forEach(p => provinciaSelect.append(`<option value="${p}">${p}</option>`));

            provinciaSelect.on('change', function () {
                cantonSelect.empty().append(`<option disabled selected>Seleccione un cantón</option>`);
                distritoSelect.empty().append(`<option disabled selected>Seleccione un distrito</option>`);
                const cantones = data[this.value];
                cantones.forEach(c => cantonSelect.append(`<option value="${c}">${c}</option>`));
            });

            cantonSelect.on('change', function () {
                distritoSelect.empty().append(`<option disabled selected>Seleccione un distrito</option>`);
                const distritos = cantonData[this.value] || [];
                distritos.forEach(d => distritoSelect.append(`<option value="${d}">${d}</option>`));
            });
        });
    </script>
}

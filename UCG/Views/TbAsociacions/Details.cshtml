@model UCG.Models.TbAsociacion

@{
    ViewData["Title"] = "Detalle de Asociación";
}

<h1 class="text-center mb-4">Detalle de Asociación</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header">
                Información general
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Cédula Jurídica</dt>
                    <dd class="col-sm-8 mb-3">@Model.CedulaJuridica</dd>

                    <dt class="col-sm-4 mb-3">Código de Registro</dt>
                    <dd class="col-sm-8 mb-3">@Model.CodigoRegistro</dd>

                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Fecha de Constitución</dt>
                    <dd class="col-sm-8 mb-3">@Model.FechaConstitucion.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Teléfono</dt>
                    <dd class="col-sm-8 mb-3">@Model.Telefono</dd>

                    <dt class="col-sm-4 mb-3">Fax</dt>
                    <dd class="col-sm-8 mb-3">@Model.Fax</dd>

                    <dt class="col-sm-4 mb-3">Correo Electrónico</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Provincia</dt>
                    <dd class="col-sm-8 mb-3">@Model.Provincia</dd>

                    <dt class="col-sm-4 mb-3">Cantón</dt>
                    <dd class="col-sm-8 mb-3">@Model.Canton</dd>

                    <dt class="col-sm-4 mb-3">Distrito</dt>
                    <dd class="col-sm-8 mb-3">@Model.Distrito</dd>

                    <dt class="col-sm-4 mb-3">Pueblo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Pueblo</dd>

                    <dt class="col-sm-4 mb-3">Dirección</dt>
                    <dd class="col-sm-8 mb-3">@Model.Direccion</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Descripcion</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdAsociacion" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

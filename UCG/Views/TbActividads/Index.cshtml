@model IEnumerable<UCG.Models.TbActividad>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div clss="table-responsive">
    <table id="miTabla" class="table table-striped table-hover display ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Razon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lugar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observaciones)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdActaNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdAsociacionNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdAsociadoNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Razon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdActaNavigation!.IdActa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAsociacionNavigation!.IdAsociacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAsociadoNavigation!.IdAsociado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdActividad">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdActividad">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdActividad">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<!-- DataTables CSS con Bootstrap -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

@section Scripts {
    @{
        <!-- Tu script separado -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- DataTables JS -->
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/js/ActividadScripts/ActividadIndex.js"></script>
    }
}
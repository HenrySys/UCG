@model UCG.Models.TbActaAsistencium

@{
    ViewData["Title"] = "Eliminar Asistencia";
}

<h1 class="text-center mb-4">Eliminar Asistencia</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este registro de asistencia?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Fecha</dt>
                    <dd class="col-sm-8 mb-3">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Asociado</dt>
                    <dd class="col-sm-8 mb-3">
                        @Model.IdAsociadoNavigation?.Nombre
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdActaAsistencia" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<UCG.Models.TbMovimiento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">

    <table id ="miTabla" class="table table-striped table-hover display">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdAsociado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoMovimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FuenteFondo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdProyecto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MetdodoPago)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaMovimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubtotalMovido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MontoTotalMovido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdActaNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdAsociacionNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCategoriaMovimientoNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCuentaNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdProveedorNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
             <tr data-id="@item.IdMovimiento">
                <td>
                    @Html.DisplayFor(modelItem => item.IdAsociado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoMovimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuenteFondo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProyecto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetdodoPago)
                </td>
                <td>
                    @item.FechaMovimiento.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubtotalMovido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotalMovido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdActaNavigation.IdActa)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.IdAsociacionNavigation.IdAsociacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoriaMovimientoNavigation.IdCategoriaMovimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCuentaNavigation.IdCuenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProveedorNavigation.IdProveedor)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdMovimiento">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdMovimiento">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdMovimiento">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<!-- DataTables CSS con Bootstrap -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

@section Scripts {
    @{
        <!-- Tu script separado -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- DataTables JS -->
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/js/MovimientoScripts/MovimientoIndex.js"></script>

    }
}
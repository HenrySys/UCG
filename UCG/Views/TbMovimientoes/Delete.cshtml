@model UCG.Models.TbMovimiento

@{
    ViewData["Title"] = "Eliminar Movimiento";
}

<h1 class="text-center mb-4">Eliminar Movimiento</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este movimiento?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Asociado</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociadoNavigation?.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Tipo de Movimiento</dt>
                    <dd class="col-sm-8 mb-3">@Model.TipoMovimiento</dd>

                    <dt class="col-sm-4 mb-3">Fuente de Fondo</dt>
                    <dd class="col-sm-8 mb-3">@Model.FuenteFondo</dd>

                    <dt class="col-sm-4 mb-3">Proyecto</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdProyecto</dd>

                    <dt class="col-sm-4 mb-3">Cliente</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdCliente</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Descripcion</dd>

                    <dt class="col-sm-4 mb-3">Método de Pago</dt>
                    <dd class="col-sm-8 mb-3">@Model.MetdodoPago</dd>

                    <dt class="col-sm-4 mb-3">Fecha de Movimiento</dt>
                    <dd class="col-sm-8 mb-3">@Model.FechaMovimiento.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Subtotal</dt>
                    <dd class="col-sm-8 mb-3">@Model.SubtotalMovido</dd>

                    <dt class="col-sm-4 mb-3">Monto Total</dt>
                    <dd class="col-sm-8 mb-3">@Model.MontoTotalMovido</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Acta Asociada</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdActaNavigation?.NumeroActa</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociacionNavigation?.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Categoría de Movimiento</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdCategoriaMovimientoNavigation?.NombreCategoria</dd>

                    <dt class="col-sm-4 mb-3">Cuenta</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdCuentaNavigation?.TituloCuenta</dd>

                    <dt class="col-sm-4 mb-3">Proveedor</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdProveedorNavigation?.IdProveedor</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdMovimiento" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

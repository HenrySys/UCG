@model UCG.Models.TbFactura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<h1 class="text-center mb-4">Eliminar Factura</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar esta factura?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Número de Factura</dt>
                    <dd class="col-sm-8 mb-3">@Model.NumeroFactura</dd>

                    <dt class="col-sm-4 mb-3">Fecha de Emisión</dt>
                    <dd class="col-sm-8 mb-3">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Descripcion</dd>

                    <dt class="col-sm-4 mb-3">Monto Total</dt>
                    <dd class="col-sm-8 mb-3">@Model.MontoTotal</dd>

                   

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociacionNavigation?.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Asociado</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.IdAsociadoNavigation?.Nombre))
                        {
                            <span>@Model.IdAsociadoNavigation.Nombre</span>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </dd>

                    <dt class="col-sm-4 mb-3">Colaborador</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.IdColaboradorNavigation?.Nombre))
                        {
                            <span>@Model.IdColaboradorNavigation.Nombre</span>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </dd>

                    <dt class="col-sm-4 mb-3">Proveedor</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.IdProveedorNavigation?.NombreEmpresa))
                        {
                            <span>@Model.IdProveedorNavigation.NombreEmpresa</span>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </dd>

                    <dt class="col-sm-4 mb-3">Archivo</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.NombreArchivo))
                        {
                            <span>@Model.NombreArchivo</span>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </dd>

                    <dt class="col-sm-4 mb-3">Archivo URL</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (!string.IsNullOrWhiteSpace(Model.ArchivoUrl))
                        {
                            <a href="@Model.ArchivoUrl" target="_blank">@Model.ArchivoUrl</a>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </dd>

                    <dt class="col-sm-4 mb-3">Fecha de Subida</dt>
                    <dd class="col-sm-8 mb-3">
                        @if (Model.FechaSubida.HasValue)
                        {
                            <span>@Model.FechaSubida.Value.ToString("dd/MM/yyyy")</span>
                        }
                        else
                        {
                            <span class="text-muted">No especificado</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdFactura" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-danger" id="btnConfirmDelete">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>

                @section Scripts {
                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    <script src="~/js/FacturaScripts/FacturaDelete.js"></script>
                }
            </div>
        </div>
    </div>
</div>

@model UCG.Models.TbJuntaDirectiva

@{
    ViewData["Title"] = "Crear Junta Directiva";
}

<h1 class="text-center mb-4">Crear Junta Directiva</h1>
<hr />

<div class="row">
    <!-- Columna izquierda: Datos de la junta -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header">
                Información de la Junta Directiva
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="IdAsociacion" class="form-label"></label>
                        <select asp-for="IdAsociacion" class="form-select" asp-items="ViewBag.IdAsociacion"></select>
                        <span asp-validation-for="IdAsociacion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdActa" class="form-label"></label>
                        <select asp-for="IdActa" class="form-select" asp-items="ViewBag.IdActa"></select>
                        <span asp-validation-for="IdActa" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PeriodoInicio" class="form-label"></label>
                        <input asp-for="PeriodoInicio" class="form-control" />
                        <span asp-validation-for="PeriodoInicio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PeriodoFin" class="form-label"></label>
                        <input asp-for="PeriodoFin" class="form-control" />
                        <span asp-validation-for="PeriodoFin" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Columna derecha: Miembros de la junta -->
    <div class="col-12 col-md-6">
        <div class="col-12">
            <div class="card borde-secondary-emphasis shadow">
                <div class="card-header bg-secondary-emphasis d-flex justify-content-between align-items-center">
                    <span>Miembros de la junta</span>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#detailModalMiembrosJunta">
                        Agregar
                    </button>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-sm" id="detailsTableMovimiento">
                        <thead>
                            <tr>
                                <th>Id Asociado</th>
                                <th>Id Puesto</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="mt-3">
    <input type="submit" value="Crear" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

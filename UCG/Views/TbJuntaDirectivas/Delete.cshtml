@model UCG.Models.TbJuntaDirectiva

@{
    ViewData["Title"] = "Eliminar Junta Directiva";
}

<h1 class="text-center mb-4">Eliminar Junta Directiva</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar esta junta directiva?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Periodo de Inicio</dt>
                    <dd class="col-sm-8 mb-3">@Model.PeriodoInicio?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Periodo de Fin</dt>
                    <dd class="col-sm-8 mb-3">@Model.PeriodoFin?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 mb-3">Nombre</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Acta Asociada</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdActaNavigation?.NumeroActa</dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociacionNavigation?.Nombre</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdJuntaDirectiva" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

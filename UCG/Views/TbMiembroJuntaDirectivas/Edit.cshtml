@model UCG.Models.TbMiembroJuntaDirectiva

@{
    ViewData["Title"] = "Editar Miembro de Junta Directiva";
}

<h1 class="text-center mb-4">Editar Miembro de Junta Directiva</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Formulario de Edición
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="IdMiembrosJuntaDirectiva" />

                    <div class="mb-3">
                        <label asp-for="IdJuntaDirectiva" class="form-label"></label>
                        <select asp-for="IdJuntaDirectiva" class="form-select" asp-items="ViewBag.IdJuntaDirectiva"></select>
                        <span asp-validation-for="IdJuntaDirectiva" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdAsociado" class="form-label"></label>
                        <select asp-for="IdAsociado" class="form-select" asp-items="ViewBag.IdAsociado"></select>
                        <span asp-validation-for="IdAsociado" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdPuesto" class="form-label"></label>
                        <select asp-for="IdPuesto" class="form-select" asp-items="ViewBag.IdPuesto"></select>
                        <span asp-validation-for="IdPuesto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-warning">Editar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model UCG.Models.TbMiembroJuntaDirectiva

@{
    ViewData["Title"] = "Eliminar Miembro de Junta Directiva";
}

<h1 class="text-center mb-4">Eliminar Miembro de Junta Directiva</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este miembro de la junta directiva?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>

                    <dt class="col-sm-4 mb-3">Asociado</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdAsociadoNavigation?.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Junta Directiva</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdJuntaDirectivaNavigation?.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Puesto</dt>
                    <dd class="col-sm-8 mb-3">@Model.IdPuestoNavigation?.Nombre</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdMiembrosJuntaDirectiva" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

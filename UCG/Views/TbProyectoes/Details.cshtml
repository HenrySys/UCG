@model UCG.Models.TbProyecto

@{
    ViewData["Title"] = "Detalle del Proyecto";
}

<h1 class="text-center mb-4">Detalle del Proyecto</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                Información del Proyecto
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 mb-3">Nombre del Proyecto</dt>
                    <dd class="col-sm-8 mb-3">@Model.Nombre</dd>

                    <dt class="col-sm-4 mb-3">Descripción</dt>
                    <dd class="col-sm-8 mb-3">@Model.Descripcion</dd>

                    <dt class="col-sm-4 mb-3">Monto Total Destinado</dt>
                    <dd class="col-sm-8 mb-3">@Model.MontoTotalDestinado</dd>

                    <dt class="col-sm-4 mb-3">Número de Acta</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbActums" asp-action="Details" asp-route-id="@Model.IdActaNavigation.IdActa">
                            @Model.IdActaNavigation.NumeroActa
                        </a>
                    </dd>

                    <dt class="col-sm-4 mb-3">Asociación</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociacions" asp-action="Details" asp-route-id="@Model.IdAsociacionNavigation.IdAsociacion">
                            @Model.IdAsociacionNavigation.Nombre
                        </a>
                    </dd>

                    <dt class="col-sm-4 mb-3">Asociado</dt>
                    <dd class="col-sm-8 mb-3">
                        <a asp-controller="TbAsociadoes" asp-action="Details" asp-route-id="@Model.IdAsociadoNavigation.IdAsociado">
                            @Model.IdAsociadoNavigation.Nombre
                        </a>
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdProyecto" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

@using UCG.Models.ViewModels
@using static UCG.Models.TbProyecto
@model ProyectoViewModel

@{
    ViewData["Title"] = "Crear Proyecto";
}

<h1 class="text-center mb-4">Crear Proyecto</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                Información del Proyecto
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <dl class="row">
                        <dt class="col-sm-4 mb-3"><label asp-for="IdAsociacion" class="form-label"></label></dt>
                        <dd class="col-sm-8 mb-3">
                            @if (ViewBag.EsAdmin == true)
                            {
                                <input type="text" class="form-control mb-2" value="@ViewBag.Nombre" disabled />
                                <input type="hidden" asp-for="IdAsociacion" value="@ViewBag.IdAsociacion" />
                            }
                            else
                            {
                                <select asp-for="IdAsociacion" class="form-select" asp-items="ViewBag.IdAsociacion">
                                    <option disabled selected>Seleccione una asociación</option>
                                </select>
                            }
                            <span asp-validation-for="IdAsociacion" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3"><label asp-for="IdActa" class="form-label"></label></dt>
                        <dd class="col-sm-8 mb-3">
                            <select asp-for="IdActa" class="form-select" asp-items="ViewBag.IdActa" id="IdActa">
                                <option disabled selected>Seleccione un acta</option>
                            </select>
                            <span asp-validation-for="IdActa" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3"><label asp-for="IdAsociado" class="form-label"></label></dt>
                        <dd class="col-sm-8 mb-3">
                            <select asp-for="IdAsociado" class="form-select" asp-items="ViewBag.IdAsociado"></select>
                            <span asp-validation-for="IdAsociado" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3"><label asp-for="Nombre" class="form-label"></label></dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3"><label asp-for="Descripcion" class="form-label"></label></dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </dd>

                        <dt class="col-sm-4 mb-3"><label asp-for="MontoTotalDestinado" class="form-label"></label></dt>
                        <dd class="col-sm-8 mb-3">
                            <input asp-for="MontoTotalDestinado" class="form-control" />
                            <span asp-validation-for="MontoTotalDestinado" class="text-danger"></span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <input type="submit" value="Guardar Proyecto" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model UCG.Models.TbUsuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1 class="text-center mb-4">Eliminar Usuario</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                Confirmación de Eliminación
            </div>
            <div class="card-body">
                <p class="text-danger">¿Estás seguro de que deseas eliminar este usuario?</p>

                <dl class="row">
                    <dt class="col-sm-4 mb-3">Nombre de Usuario</dt>
                    <dd class="col-sm-8 mb-3">@Model.NombreUsuario</dd>

                    <dt class="col-sm-4 mb-3">Contraseña</dt>
                    <dd class="col-sm-8 mb-3">@Model.Contraseña</dd>

                    <dt class="col-sm-4 mb-3">Rol</dt>
                    <dd class="col-sm-8 mb-3">@Model.Rol</dd>

                    <dt class="col-sm-4 mb-3">Correo</dt>
                    <dd class="col-sm-8 mb-3">@Model.Correo</dd>

                    <dt class="col-sm-4 mb-3">Estado</dt>
                    <dd class="col-sm-8 mb-3">@Model.Estado</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdUsuario" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
